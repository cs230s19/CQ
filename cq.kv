ScreenManager:
    id: screen_manager
    IntroductionScreen:
        id: introduction_screen
        name: 'introduction'
        manager: screen_manager
    DashboardScreen:
        name: 'DashboardScreen'
        manager: screen_manager
        recap_text: introduction_screen.recap
    ActionScreen:
        name: 'ActionScreen'
        manager: screen_manager
        action_text: action_list_screen.action
    ActionListScreen:
        id: action_list_screen
        name: 'ActionListScreen'
        manager: screen_manager

<IntroductionScreen>:
    name: 'introduction'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: title
                size_hint: (1, .18)
                font_size: self.height * .9
                font_name: 'Tangerine-Bold'
                text: 'Welcome.'
            Label:
                id: body
                size_hint: (1, .7)
                text_size: self.width, None
                font_size: self.height * .06
                font_name: 'PoiretOne-Regular'
                height: self.texture_size[1]
                text: 'You have chosen to engage in the global seminar. As a part of this course, you will be challenged to change who you are and how you interact with the world. You will be asked to step outside of the comfortable and routine in order to expand not just your college experience but your life experience. The focus of this course is cultural intelligence or CQ.'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Upload Course Spreadsheet'
                on_release: root.show_load()
            Button:
                text: 'Dashboard'
                on_release: root.dashboard_transition()
                on_release: root.manager.transition.direction = 'right'
            Button:
                text: 'Action list'
                on_release: root.actionlist_transition()
                on_release: root.manager.transition.direction = 'right'



<FileSelectorPopup>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '~'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)

<DashboardScreen>:
    name: 'DashboardScreen'

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: (1, .88)
                text_size: self.width, None
                text: root.recap_text

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'export progress'
                on_release: root.export_progress()

            Button:
                id: back
                text: 'go back'
                on_release: app.root.current = 'introduction'
                on_release: root.manager.transition.direction = 'left'


<ActionListScreen>:
    on_pre_enter: self.start()
    name: 'ActionListScreen'

    GridLayout:
        cols: 1
        ScrollView:
            size_hint_y: 10
            GridLayout:
                id: content
                cols: 1

        Button:
            size_hint_y: None
            height: 30
            text: 'go back'
            on_release: app.root.current = 'introduction'
            on_release: root.manager.transition.direction = 'left'


<ActionScreen>:
    name: 'ActionScreen'

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text_size: self.width, None
                text: root.action_text

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: back
                text: 'go back'
                on_release: app.root.current = 'ActionListScreen'
                on_release: root.manager.transition.direction = 'left'
